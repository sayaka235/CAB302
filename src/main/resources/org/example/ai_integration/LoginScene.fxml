<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.ai_integration.controls.LoginController"
      alignment="CENTER" spacing="12" prefWidth="480" prefHeight="320"
      style="-fx-background-color:#f3f4f6;">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <children>
        <Label text="Log In" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button fx:id="loginButton" text="Log in" onAction="#handleLogin"/>
        <Separator/>
        <Button text="No account? Sign up" onAction="#goSignup"/>
    </children>
</VBox>
