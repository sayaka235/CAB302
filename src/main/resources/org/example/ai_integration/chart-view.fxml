<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.BarChart ?>
<?import javafx.scene.chart.CategoryAxis ?>
<?import javafx.scene.chart.NumberAxis ?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?xml version="1.0" encoding="UTF-8"?>
<VBox fx:id="chartCard" visible="false" spacing="10" maxWidth="820" styleClass="card"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.ai_integration.controls.QuizController">

    <Label text="Performance Chart" styleClass="title"/>

    <BarChart fx:id="performanceChart" prefHeight="300" prefWidth="600">
        <xAxis>
            <CategoryAxis label="Quiz"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Score"/>
        </yAxis>
    </BarChart>

    <Button text="Back to Quiz" onAction="#onBackFromChart"/>
    <Button text="View Performance Chart" onAction="#onViewChart"/>

</VBox>