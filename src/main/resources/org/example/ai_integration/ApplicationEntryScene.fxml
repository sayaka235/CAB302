<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.ai_integration.controls.SignupController"
           style="-fx-background-color: linear-gradient(to bottom, #b3c7f7, #244678);">

    <children>
        <!-- Signup card -->
        <VBox alignment="CENTER" spacing="10"
              maxWidth="400" maxHeight="500"
              style="-fx-background-color: white; -fx-background-radius: 10;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <effect>
                <DropShadow blurType="ONE_PASS_BOX" radius="8" offsetX="4" offsetY="4"
                            color="rgba(0,0,0,0.2)"/>
            </effect>

            <!-- Titles -->
            <Label text="Star Student" textFill="BLACK">
                <font><Font name="Verdana" size="26"/></font>
            </Label>
            <Label text="Sign up" textFill="BLACK">
                <font><Font size="21"/></font>
            </Label>

            <!-- First Name -->
            <Label text="First Name:" textFill="#9f9f9f"/>
            <TextField fx:id="firstNameField" promptText="First name" maxWidth="300"/>

            <!-- Last Name -->
            <Label text="Last Name:" textFill="#9f9f9f"/>
            <TextField fx:id="lastNameField" promptText="Last name" maxWidth="300"/>

            <!-- Email -->
            <Label text="Email:" textFill="#9f9f9f"/>
            <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>

            <!-- Date of Birth -->
            <Label text="Date Of Birth:" textFill="#9f9f9f"/>
            <DatePicker fx:id="dobPicker" maxWidth="300"/>

            <!-- Password -->
            <Label text="Password:" textFill="#9f9f9f"/>
            <HBox spacing="5" alignment="CENTER">
                <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>
                <TextField fx:id="passwordTextField" promptText="Password"
                           visible="false" managed="false" maxWidth="200"/>
                <CheckBox fx:id="showPasswordCheckBox" text="Show"/>
            </HBox>

            <!-- Sign Up button -->
            <Button fx:id="signupButton" text="Sign Up" onAction="#handleSignup"
                    style="-fx-background-color: #054fb9; -fx-text-fill: white; -fx-background-radius: 5;"
                    maxWidth="150"/>

            <!-- Login link -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Already have an account?"/>
                <Button text="Log in" onAction="#goLogin"
                        style="-fx-background-color: #054fb9; -fx-text-fill: white; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </children>
</StackPane>
